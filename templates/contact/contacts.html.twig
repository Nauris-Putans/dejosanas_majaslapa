{% extends 'base.html.twig' %}

{% block body %}

    <!-- Section - Kontakti -->
    <section class="Kontakti">
        <div class="box">
            <div class="container">

                    <div class="info-text">
                        <h1 class="fade-in align-self-center text-center text-md-center">Kontakti</h1><hr class="fade-in">
                            <div class="boxed">
                                <div class="input-info">
                                    <h3 class="fade-in">Vai vēlaties ar mums sazināties? Droši uzraksti un mēs
                                        uzklausīsim tavu ziņu.</h3>

                                    <div spellcheck="false" class="form form-inline justify-content-center">

                                        {{ form_start(our_form) }}
                                        {{ form_widget(our_form) }}

                                        <div class="form-group row">
                                            <div class="col-sm-12">
                                                <input type="submit" value="Nosutīt ziņu" class="btn btn-primary">
                                            </div>
                                        </div>

                                        {{ form_end(our_form) }}
                                    </div>
                                </div>
                            </div>
                    </div>

            </div>
        </div>
    </section>

{% endblock %}