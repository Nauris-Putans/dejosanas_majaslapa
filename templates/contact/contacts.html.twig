{% extends 'base.html.twig' %}

{% block body %}

    <!-- Section - Kontakti -->
    <section class="Kontakti">
        <div class="box">
            <div class="container">
                <div class="content">
                    <div class="row">
                        <div class="info-text">
                            <h1 class="fade-in align-self-center text-center text-md-center">Kontakti</h1><hr class="fade-in">

                            <div class="boxed">
                                <p class="fade-in">Vai vēlaties ar mums sazināties? Mēs labprāt uzklausīsim ziņu no jums.
                                    Lūk, kā jūs varat ar mums sazināties – Ievadot visu vajadzīgo un nospiežot
                                    “Nosūtīt ziņu” – jūsu ziņa tiks nosūtītā mums un mēs 1 stundas laika jums atbildēsim
                                    uz ziņu.
                                </p>

                                <div class="form">
                                    {{ form_start(our_form) }}
                                    {{ form_widget(our_form) }}

                                    <div class="form-group row">
                                        <div class="col-sm-2"></div>
                                        <div class="col-sm-10">
                                            <input type="submit" value="Nosutīt ziņu" class="btn btn-success">
                                        </div>
                                    </div>

                                    {{ form_end(our_form) }}
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}